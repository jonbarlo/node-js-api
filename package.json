{
  "name": "js-api",
  "version": "1.0.0",
  "description": "NodeJS TypeScript API",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon",
    "build": "tsc",
    "build:minimal": "tsc src/scripts/test-minimal-ts.ts --outDir dist/scripts",
    "test": "jest",
    "lint": "eslint src/**/*.{ts,tsx}",
    "migrate": "ts-node src/scripts/runMigration.ts",
    "migrate:all": "ts-node src/scripts/runAllMigrations.ts",
    "migrate:init": "ts-node src/scripts/initDatabase.ts",
    "migrate:status": "ts-node src/scripts/migrateStatus.ts",
    "migrate:undo": "ts-node src/scripts/migrateUndo.ts",
    "migrate:create": "ts-node src/scripts/createMigration.ts",
    "test:db": "ts-node src/scripts/testDatabase.ts",
    "test:basic": "ts-node src/scripts/testBasic.ts",
    "test:ftp-config": "ts-node src/scripts/test-ftp-config.ts",
    "test:minimal": "ts-node src/scripts/test-minimal-ts.ts",
    "test:deployed": "ts-node src/scripts/test-minimal-deployed.ts",
    "test:iis": "ts-node src/scripts/test-iis-environment.ts",
    "test:dotenv": "ts-node src/scripts/test-dotenv-debug.ts",
    "test:context": "ts-node src/scripts/test-iis-context.ts",
    "deploy:ftp": "ts-node src/scripts/deploy-ftp.ts",
    "build:deploy": "npm run build && npm run deploy:ftp",
    "test:super-minimal": "ts-node src/scripts/test-super-minimal.ts",
    "postinstall": "npm run build",
    "railway:deploy": "npm run build && echo 'Railway deployment ready'",
    "railway:prepare": "ts-node src/scripts/deploy-railway.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonbarlo/node-js-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jonbarlo/node-js-api/issues"
  },
  "homepage": "https://github.com/jonbarlo/node-js-api#readme",
  "dependencies": {
    "@types/mssql": "^9.1.7",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^11.0.1",
    "mysql2": "^3.14.1",
    "nodemon": "^3.1.10",
    "pg": "^8.16.2",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.4",
    "@types/sequelize": "^4.28.20",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "basic-ftp": "^5.0.4",
    "eslint": "^9.29.0",
    "jest": "^30.0.3",
    "sequelize-cli": "^6.6.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
