# Application Configuration
APP_NAME=NodeJS API
VERSION=1.0.0
PORT=3000
NODE_ENV=development

# Database Configuration
# Development (MariaDB/MySQL) - Default
DB_HOST=localhost
DB_PORT=3306
DB_NAME=nodejs_api_dev
DB_USERNAME=root
DB_PASSWORD=password

# Production (MS SQL Server) - Override these for production
# DB_HOST=your_sql_server_host
# DB_PORT=1433
# DB_NAME=your_database_name
# DB_USERNAME=sa
# DB_PASSWORD=your_database_password

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production

# Database URL (alternative to individual settings)
# Development: DB_URL=mysql://username:password@host:port/database_name
# Production: DB_URL=mssql://username:password@host:port/database_name 